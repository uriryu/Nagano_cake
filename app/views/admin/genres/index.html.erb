<div class="container">
  <h4 class="col-md-3 my-3">
    <span class="bg-light">ジャンル一覧・追加</span>
  </h4>
  <div>ジャンル名</div>
  <div class="row">
  <div class="col-md-4 mb-3">

    <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.text_field :name, class: "form-control my-3" %>
        <%= f.submit '新規登録', class: "btn btn-success mb-3" %>
    <% end %>
  </div>

  <table class="table col-md-3 offset-md-1">
    <tr>
      <th>ジャンル</th>
    </tr>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </table>
  </div>
</div>
