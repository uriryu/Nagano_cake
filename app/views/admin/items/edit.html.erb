<h1>Admin::Items#edit</h1>

<h4>商品編集</h4>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
<div>
  <p>商品画像</p>
  <%= f.file_field :image, accept: "image/*" %>

  <p>商品名</p>
  <%= f.text_field :name %>

  <p>商品説明</p>
  <%= f.text_area :introduction %>

  <p>ジャンル</p>
  <span><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %></span>

  <p>税抜価格</p>
  <span><%= f.text_field :price, data: { autonumeric: true } %></span>

  <p><%= f.submit '変更を保存' %></p>

</div>
<% end %>