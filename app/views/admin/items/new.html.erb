<div class="container">
  <h4 class="mt-5">
    <span class="bg-light">商品新規登録</span>
  </h4>

  <div class="row">

    <div class="col-md-3">
      <h5 class="m-5">画像</h5>
      <h5 class="m-5">商品名</h5>
      <h5 class="m-5">商品説明</h5>
      <h5 class="m-5">ジャンル</h5>
      <h5 class="m-5">税抜価格</h5>
      <h5 class="m-5">販売ステータス</h5>
    </div>

    <div class="col-md-7">
    <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
      <p class="my-5"><%= f.file_field :image, accept: "image/*" %></p>


      <p class="my-4"><%= f.text_field :name, placeholder: "商品名", class: "form-control col-md-7" %></p>


      <p class="my-3"><%= f.text_area :introduction, placeholder: "ここに説明を記述します", class: "form-control col-md-7" %></p>


      <p class="my-3"><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, { include_blank: '選択してください' }, class: "custom-select col-md-7" %></p>


      <p class="my-4"><%= f.text_field :price, data: { autonumeric: true }, placeholder: "1000", class: "form-control col-md-7" %></p>


      <p class="my-5">
        <%= form_with(model: @item, local: true) do |form| %>
          <%= form.radio_button :is_active, "販売中" %>
          <%= form.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= form.radio_button :is_active, "販売停止中" %>
          <%=form.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
        <% end %>
      </p>

      <%= f.submit '新規登録', class: "mb-5 btn btn-success col-md-4" %>
    <% end %>
    </div>

  </div>

  </div>

