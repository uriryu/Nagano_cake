<p>商品新規登録</p>


  <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
  <div>
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>

    <h4>商品名</h4>
    <%= f.text_field :name, placeholder: "商品名" %>

    <h4>商品説明</h4>
    <%= f.text_area :introduction, placeholder: "ここに説明を記述します" %>

    <h4>ジャンル</h4>
    <%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] }, { include_blank: '選択してください' } %>

    <h4>税抜価格</h4>
    <%= f.text_field :price, data: { autonumeric: true }, placeholder: "1000" %>

    <h4>販売ステータス</h4>
    <%= form_with(model: @item, local: true) do |form| %>
      <%= form.radio_button :is_active, :true %>
      <%= form.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
      <%= form.radio_button :is_active, :false %>
      <%=form.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
    <% end %>

    <%= f.submit '新規登録' %>
  </div>

  <% end %>
