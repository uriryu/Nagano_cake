<div class="container">

  <div class="row">
    <div class="col-md-3 my-5">
      <%= render 'admin/genres/list', genres: @genres %>
    </div>
    <div class="m-5">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "250x200", class: "img-responsive" %><br>
      <% else %>
        <%= image_tag 'no_image', size: "200x200" %><br>
      <% end %>
    </div>
    <table class="mx-5 my-5 col-md-4">
      <tr>
        <th>
          <h1 class="font-weight-bold"><%= @item.name %></h1>
        </th>
      </tr>
      <tr>
        <th>
          <h4><%= @item.introduction %></h4>
        </th>
      </tr>

      <tr>
        <th>
          <h4>￥<%= @item.with_tax_price %>(税込)</h4>
        </th>
      </tr>

      <tr>
        <th>
          <%= form_with(model: @cart_item, url: cart_items_path, method: :post, local: true, class: "row") do |form| %>
            <%= form.hidden_field :item_id, value: @item.id %>
            <%= form.select :amount, *[1..4], {include_blank: '個数選択'}, class: "form-control col-md-4 mx-4" %>
            <%= form.submit "カートに入れる", class: "btn btn-success col-md-4 mx-4" %>
          <% end %>
        </th>
      </tr>

    </table>

  </div>

</div>