<div class="container-fluid">

  <div class="row m-5">

    <div class="col-2">
      <%= render 'admin/genres/list', genres: @genres %>
    </div>


  <% if params[:genre_id].present? %>
  <div class="mx-2">
    <h2 class="mb-4 font-weight-bold">ジャンル一覧(全<%= @items.where('created_at').count %>件)</h2>
    <table>
      <tbody>
        <tr>
          <div class="row mx-2">
          <% @items.each do |item| %>
            <div class="flex-column mx-2">
              <td>
              <%= link_to item_path(item) do %>
                <% if item.image.attached? %>
                <%= image_tag item.image, size: "250x200", class: "img-responsive" %><br>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %><br>
               <% end %>
                <%= item.name %><br>
                ￥<%= item.price %>
              <% end %>
              </td>
            </div>
          <% end %>
          </div>
        </tr>
      </tbody>
    </table>
  </div>
  <% else %>

  <div class="mx-2">
    <h2 class="mb-4 font-weight-bold">商品一覧(全<%= @items.where('created_at').count %>件)</h2>
    <table>
      <tbody>
        <tr>
          <div class="row mx-2">
            <% @items.each do |item| %>
            <div class="flex-column mx-2">
              <td>
              <%= link_to item_path(item) do %>
              <% if item.image.attached? %>
                <%= image_tag item.image, size: "250x200", class: "img-responsive" %><br>
              <% else %>
                <%= image_tag 'no_image', size: "200x200" %><br>
               <% end %>
                <%= item.name %><br>
                ￥<%= item.price %>
              <% end %>
              </td>
            </div>
            <% end %>
          </div>
        </tr>
      </tbody>
    </table>
  </div>

  </div>
  <% end %>
  <div class="offset-md-5 my-5">
    <%= paginate @items %>
  </div>
</div>