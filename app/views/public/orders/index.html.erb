<h1>Public::Orders#index</h1>
<div>
  
  <h4>
    <span>注文履歴一覧</span>
  </h4>
  
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%= @orders.each do |order| %>
        <td><%= order.update %></td>
        <td>
          <p><%= order.postal_code %></p>
          <p><%= order.address %></p>
          <p><%= order.name %></p>
        </td>
        <!--<td>ここに注文商品をすべて表示</td>-->
        <td><%= order.total_payment %></td>
        <td><%= order.status %></td>
        <td><%= link_to "注文詳細", order_path(order.id) %></td>
      </tr>
    </tbody>
  </table>
  
</div>