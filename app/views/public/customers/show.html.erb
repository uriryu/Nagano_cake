<h1>Public::Customers#show</h1>

<h4>マイページ</h4>
<div>
  <span>登録情報</span>
  <span><%= link_to "編集する", edit_customers_path %></span>
</div>

<% @customers.each do |customer| %>
<div>
  <!--ここはテーブルを使うべきだと思う.-->
  <div>
    <p>氏名</p>
    <span><%= customer.first_name %> <%= customer.last_name %></span>

    <p>カナ</p>
    <span><%= customer.first_name_kana %> <%= customer.last_name_kana %></span>

    <p>郵便番号</p>
    <span><%= customer.postal_code %></span>

    <p>住所</p>
    <span><%= customer.address %></span>

    <p>電話番号</p>
    <span><%= customer.telephone_number %></span>

    <p>メールアドレス</p>
    <span><%= customer.email %></span>
  </div>

</div>
<% end %>

<h2>配送先</h2>
<%= link_to "一覧を見る", address_index_path %>

<h2>注文履歴</h2>
<%= link_to "一覧を見る", orders_path %>